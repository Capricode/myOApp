<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\fa-brands-400.ttf" />
    <None Remove="Resources\fa-regular-400.ttf" />
    <None Remove="Resources\fa-solid-900.ttf" />
    <None Remove="Resources\RobotoCondensed-Bold.ttf" />
    <None Remove="Resources\RobotoCondensed-BoldItalic.ttf" />
    <None Remove="Resources\RobotoCondensed-Italic.ttf" />
    <None Remove="Resources\RobotoCondensed-Light.ttf" />
    <None Remove="Resources\RobotoCondensed-LightItalic.ttf" />
    <None Remove="Resources\RobotoCondensed-Regular.ttf" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\fa-brands-400.ttf" />
    <EmbeddedResource Include="Resources\fa-regular-400.ttf" />
    <EmbeddedResource Include="Resources\fa-solid-900.ttf" />
    <EmbeddedResource Include="Resources\RobotoCondensed-Bold.ttf" />
    <EmbeddedResource Include="Resources\RobotoCondensed-BoldItalic.ttf" />
    <EmbeddedResource Include="Resources\RobotoCondensed-Italic.ttf" />
    <EmbeddedResource Include="Resources\RobotoCondensed-Light.ttf" />
    <EmbeddedResource Include="Resources\RobotoCondensed-LightItalic.ttf" />
    <EmbeddedResource Include="Resources\RobotoCondensed-Regular.ttf" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Controls\EventCardFrame.xaml.cs">
      <DependentUpon>EventCardFrame.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Controls\EventCardView.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Themes\AlternativeTheme.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Themes\DefaultTheme.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\DashboardPage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
  </ItemGroup>
</Project>